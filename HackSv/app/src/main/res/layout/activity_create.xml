<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="piratecrew.hacksv.CreateActivity"
    android:id="@+id/createscreen">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="35%"
            android:id="@+id/imageViewTop"
            android:layout_weight="0.70"
            android:layout_gravity="center_horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextTop"
                android:layout_gravity="center_horizontal|center_vertical"
                android:hint="Description"/>

        </ImageView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="15%"
            android:id="@+id/editTextCenter"
            android:alignParentTop="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:below="@+id/imageViewTop"
            android:hint="Question"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="35%"
            android:id="@+id/imageViewBottom"
            android:layout_weight="0.70"
            android:layout_gravity="center_horizontal"
            android:below="@+id/editTextCenter">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextBottom"
                android:alignParentTop="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:hint="Description"/>

        </ImageView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="15%"
            android:text="Create"
            android:id="@+id/create"
            android:layout_gravity="center_horizontal"
            android:below="@+id/imageViewBottom"/>

        </LinearLayout>

</RelativeLayout>
